<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards">
	<file>src</file>
	<file>tests</file>
	<file>views</file>

	<rule ref="PSR12" />
	<rule ref="WordPress.Security"/>

	<!-- Show sniff codes in all reports -->
	<arg value="s"/>

	<!-- Check all PHP files in directory tree by default. -->
	<arg name="extensions" value="php"/>
</ruleset>